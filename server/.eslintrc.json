
{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 11
    },

    "rules": {
        "array-bracket-spacing": [
            "error", 
            "always"
        ],
        "comma-dangle": [
            "error", 
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "eol-last": [
            "error", 
            "always"
        ],
        "eqeqeq": "error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "max-len": [
            "error", 
            { 
                "code": 100,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-duplicate-imports": [
            "error", 
            { 
                "includeExports": true 
            }
        ],
        "no-extra-parens": "error",
        "no-else-return": "error",
        "no-trailing-spaces": "error",
        "no-unneeded-ternary": "error",
        "no-var": "error",
        "object-curly-spacing": [
            "error", 
            "always"
        ],
        "prefer-const": "error",
        "prefer-destructuring": ["error", {
            "array": true,
            "object": true
          }, {
            "enforceForRenamedProperties": false
        }],
        "quotes": [
            "error",
            "single",
            { 
                "allowTemplateLiterals": true 
            }
        ],
        "require-await": "error",
        "semi": [
            "error",
            "always"
        ]
    }
}
